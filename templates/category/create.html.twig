{% extends 'base.html.twig' %}

{% block title %}
	Créer une nouvelle catégorie
{% endblock %}

{% block body %}
	<h1>Création d'une nouvelle catégorie</h1>

	<div class="row">
		<div class="col">
			{{ form_start(formView) }}
			{{ form_row(formView.name, {'attr': {'class': 'mb-2' }}) }}
		</div>
	</div>

	<button type="submit" class="btn btn-primary">
		<i class="fas fa-save"></i>
		Créer la catégorie
	</button>

	{{ form_end(formView) }}


{% endblock %}
